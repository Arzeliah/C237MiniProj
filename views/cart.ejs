<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #faeee0;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 90%;
            margin: 0 auto;
            max-width: 1200px;
            padding: 2rem;
        }
        header {
            background-color: #ffddb6;
            color: white;
            padding: 1rem 0;
            text-align: center;
            position: relative;
        }
        h1 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
            color: #333;
        }
        .continue-button {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            background-color: #7a7a79;
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .continue-button:hover {
            background-color: #cfd3c5;
        }
        .cart {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            list-style: none;
            padding: 0;
        }
        .cart-item {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s;
        }
        .cart-item:hover {
            transform: translateY(-10px);
        }
        .cart-item img {
            max-width: 100%;
            height: auto;
            display: block;
        }
        .cart-item-details {
            padding: 1rem;
        }
        .cart-item h3 {
            margin: 0 0 1rem;
            font-size: 1.5rem;
            color: black;
        }
        .cart-item p {
            margin: 0 0 0.5rem;
            color: black;
        }
        .cart-item .price {
            font-size: 1.2rem;
            color: #a6b5b0;
            margin-bottom: 1rem;
        }
        .cart-item .actions {
            display: flex;
            gap: 10px;
        }
        .actions button {
            flex: 1;
            text-align: center;
            padding: 0.5rem;
            border: none;
            border-radius: 5px;
            color: white;
            background-color: #7a7a79;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .actions button:hover {
            background-color: #cfd3c5;
        }
    </style>
</head>
<body>
    <header>
        <h1>Your Cart</h1>
        <a href="/" class="continue-button">Continue Shopping</a>
    </header>
    <div class="container">
        <% if (cart.length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <ul class="cart">
                <% cart.forEach(item => { %>
                    <li class="cart-item">
                        <img src="<%= item.image_url %>" alt="<%= item.name %>">
                        <div class="cart-item-details">
                            <h3><%= item.name %></h3>
                            <p><%= item.description %></p>
                            <p class="price">$<%= item.price.toFixed(2) %></p>
                            <div class="actions">
                                <form action="/cart/remove/<%= item.id %>" method="POST">
                                    <button type="submit">Remove from Cart</button>
                                </form>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</body>
</html>
